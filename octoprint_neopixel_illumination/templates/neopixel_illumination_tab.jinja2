<div>
    <h1>{{ _('Neopixel Illumination') }}</h1>

    <div class="examples">
        <div class="example square">
            <p>Choose color:</p>
            <input type="text" class="coloris" data-bind="value: currentColor, event: {input: updateColor}" data-coloris>
        </div>
        <button class="btn btn-primary" data-bind="click: saveColor">Save start color</button>
    </div>
    <div class="control-group">
        <label class="control-label">{{ _('Brightness') }}</label>
        <div class="controls">
            <input type="number" step="0.01" min="0" max="1" class="input-mini" data-bind="value: currentBrightness, event: {input: updateBrightness}">
        </div>
        <button class="btn btn-primary" data-bind="click: saveBrightness">Save start brightness</button>
    </div>
</div>
