<div id="settings_plugin_neopixel_illumination">
    <h3>{{ _('Neopixel Illumination') }}</h3>

    <form class="form-horizontal">
        <div class="control-group">
            <div class="controls">
                <label class="checkbox">
                    <input type="checkbox"
                           data-bind="checked: settings.plugins.neopixel_illumination.enabled"> {{ _('Enable') }}
                </label>
                <label class="checkbox">
                    <input type="checkbox"
                           data-bind="checked: settings.plugins.neopixel_illumination.on_startup"> {{ _('Activate on startup') }}
                </label>
                <label class="control-label">{{ _('Pixel Pin') }}</label>
                <input type="number"
                       class="input-block-level"
                       data-bind="value: settings.plugins.neopixel_illumination.pixel_pin"
                >
                <div id="red_intensity_slider" class="slider slider-horizontal" style="width: 200px;">
                    <div class="slider-track">
                        <div class="slider-selection" style="left: 50%; width: 50%;"></div>
                        <div class="slider-handle round" style="left: 50%;"></div>
                        <div class="slider-handle round" style="left: 50%;"></div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
